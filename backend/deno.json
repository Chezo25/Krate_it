{
  "tasks": {
    "dev": "deno run --allow-net --allow-env --watch backend/main.ts",
    "start": "deno run --allow-net --allow-env backend/main.ts",
    "setup": "deno run --allow-net --allow-env backend/scripts/setup-database.ts",
    "test": "deno test --allow-net --allow-env",
    "fmt": "deno fmt",
    "lint": "deno lint"
  },
  "imports": {
    "@oak/oak": "https://deno.land/x/oak@v12.6.1/mod.ts",
    "@cors": "https://deno.land/x/cors@v1.2.2/mod.ts",
    "@appwrite": "https://deno.land/x/appwrite@9.0.0/mod.ts"
  },
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true
  },
  "fmt": {
    "files": {
      "include": ["backend/"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "semiColons": true,
      "singleQuote": false,
      "proseWrap": "preserve"
    }
  },
  "lint": {
    "files": {
      "include": ["backend/"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  }
}